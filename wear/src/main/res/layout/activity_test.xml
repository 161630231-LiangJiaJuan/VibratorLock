<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="目前选择序列"
        style="@style/txt_vibArray"
        android:layout_marginTop="@dimen/_40px"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20px">
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="@dimen/_60px"
            android:layout_height="@dimen/_30px"
            android:src="@mipmap/longlong"
            android:id="@+id/iv_1st"/>
        <ImageView
            android:layout_width="@dimen/_60px"
            android:layout_height="@dimen/_30px"
            android:src="@mipmap/longlong"
            android:id="@+id/iv_2nd"/>
        <ImageView
            android:layout_width="@dimen/_60px"
            android:layout_height="@dimen/_30px"
            android:id="@+id/iv_3rd"
            android:src="@mipmap/longlong"/>
        <ImageView
            android:layout_width="@dimen/_60px"
            android:layout_height="@dimen/_30px"
            android:id="@+id/iv_4th"
            android:src="@mipmap/longlong"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:layout_width="@dimen/_130px"
            android:layout_height="@dimen/_50px"
            android:background="@drawable/btn_rounded"
            android:text="查看说明"
            android:id="@+id/btn_use"
            style="@style/txt_button" />
        <Button
            android:layout_width="@dimen/_130px"
            android:layout_height="@dimen/_50px"
            android:layout_marginLeft="@dimen/_30px"
            android:background="@drawable/btn_rounded"
            android:id="@+id/btn_start"
            android:text="点击开始"
            style="@style/txt_button" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_10px">
            <TextView
                android:layout_width="@dimen/_200px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_5px"
                android:id="@+id/tv_pwd"
                android:inputType="textPassword"
                android:textColor="@color/btn_main_color"/>
            <View
                android:layout_width="@dimen/_200px"
                android:layout_height="@dimen/_3px"
                android:background="@color/light_grey"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_5px"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10px">
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <Button
                    style="@style/btn_num"
                    android:id="@+id/btn_1num"
                    android:text="1" />
                <Button
                    style="@style/btn_num"
                    android:id="@+id/btn_2num"
                    android:text="2" />
                <Button
                    style="@style/btn_num"
                    android:id="@+id/btn_3num"
                    android:text="3" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20px">
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <Button
                    style="@style/btn_num"
                    android:id="@+id/btn_4num"
                    android:text="4" />
                <Button
                    style="@style/btn_num"
                    android:id="@+id/btn_5num"
                    android:text="5" />
                <Button
                    style="@style/btn_num"
                    android:id="@+id/btn_6num"
                    android:text="6" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20px">
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <Button
                    style="@style/btn_num"
                    android:text="7"
                    android:id="@+id/btn_7num"/>
                <Button
                    style="@style/btn_num"
                    android:text="8"
                    android:id="@+id/btn_8num"/>
                <Button
                    style="@style/btn_num"
                    android:text="9"
                    android:id="@+id/btn_9num"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20px">
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <Button
                    style="@style/btn_num"
                    android:text="#"
                    android:id="@+id/btn_jing"/>
                <Button
                    style="@style/btn_num"
                    android:text="0"
                    android:id="@+id/btn_0num"/>
                <Button
                    style="@style/btn_num"
                    android:id="@+id/btn_del"
                    android:text="删" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50px"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>