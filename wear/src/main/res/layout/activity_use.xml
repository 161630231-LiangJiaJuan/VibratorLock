<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_90px"
        android:layout_marginLeft="@dimen/_70px">
        <ImageView
            android:layout_width="@dimen/_40px"
            android:layout_height="@dimen/_40px"
            android:src="@mipmap/long_sim"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="一次长震"
            style="@style/txt_vibArray"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20px"
        android:layout_marginLeft="@dimen/_70px">
        <ImageView
            android:layout_width="@dimen/_40px"
            android:layout_height="@dimen/_40px"
            android:src="@mipmap/short_sim"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="一次短震"
            style="@style/txt_vibArray"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20px"
        android:layout_marginLeft="@dimen/_70px">
        <ImageView
            android:layout_width="@dimen/_60px"
            android:layout_height="@dimen/_60px"
            android:src="@mipmap/longshort"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="一次长震加一次短震"
            style="@style/txt_vibArray"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_70px"
        android:layout_marginTop="@dimen/_30px"
        android:text="以此类推"
        style="@style/txt_vibArray"/>
</LinearLayout>