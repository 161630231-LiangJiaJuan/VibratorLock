<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_90px"
                android:layout_marginLeft="@dimen/_70px">
                <ImageView
                    android:layout_width="@dimen/_40px"
                    android:layout_height="@dimen/_40px"
                    android:src="@mipmap/long_sim"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="一次长震，1秒"
                    style="@style/txt_vibArray"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20px"
                android:layout_marginLeft="@dimen/_70px">
                <ImageView
                    android:layout_width="@dimen/_40px"
                    android:layout_height="@dimen/_40px"
                    android:src="@mipmap/short_sim"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="一次短震，0.5秒"
                    style="@style/txt_vibArray"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20px"
                android:layout_marginLeft="@dimen/_70px">
                <ImageView
                    android:layout_width="@dimen/_60px"
                    android:layout_height="@dimen/_60px"
                    android:src="@mipmap/longshort"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="一次长震加一次短震"
                    style="@style/txt_vibArray"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_70px"
                android:layout_marginTop="@dimen/_30px"
                android:text="以此类推"
                style="@style/txt_vibArray"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_70px"
                android:layout_marginRight="@dimen/_60px"
                android:layout_marginTop="@dimen/_30px"
                android:text="输入前按下井号启用震动组合，安全情况下可直接输入密码解锁；
                若是在测试页面里，则可以点击开始按钮进行震动组合的训练，不用输入＃号"
                style="@style/txt_vibArray"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100px"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>