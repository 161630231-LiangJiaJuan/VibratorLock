<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_50px">
            <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!---->
                <!--android:text="旧的密码"-->
                <!--style="@style/txt_opt"/>-->
            <View
                android:layout_width="@dimen/_300px"
                android:layout_height="@dimen/_3px"
                style="@style/line_view"/>
            <com.example.hasee.vibratorlock.vibratorlock.view.ClearEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="旧的密码"
                android:gravity="center"
                android:layout_marginTop="@dimen/_20px"
                style="@style/Widget.WearDiag.TextView"/>
            <View
                android:layout_width="@dimen/_300px"
                android:layout_height="@dimen/_3px"
                style="@style/line_view"/>
            <com.example.hasee.vibratorlock.vibratorlock.view.ClearEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="新的密码"
                android:gravity="center"
                android:layout_marginTop="@dimen/_20px"
                style="@style/Widget.WearDiag.TextView"/>
            <View
                android:layout_width="@dimen/_300px"
                android:layout_height="@dimen/_3px"
                style="@style/line_view"/>
            <com.example.hasee.vibratorlock.vibratorlock.view.ClearEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="重新输入密码"
                android:gravity="center"
                android:layout_marginTop="@dimen/_20px"
                style="@style/Widget.WearDiag.TextView"/>
            <View
                android:layout_width="@dimen/_300px"
                android:layout_height="@dimen/_3px"
                style="@style/line_view"/>
            <Button
                android:layout_width="@dimen/_200px"
                android:layout_height="@dimen/_50px"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20px"
                android:background="@drawable/btn_rounded"
                android:text="确定"
                style="@style/txt_button"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>